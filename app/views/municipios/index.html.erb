<p id="notice"><%= notice %></p>

<h1>Lista de Municípios</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Unidade federativa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @municipios.each do |municipio| %>
      <tr>
        <td><%= municipio.nome %></td>
        <td><%= municipio.unidade_federativa %></td>
        <td><%= link_to 'Ver', municipio %></td>
        <td><%= link_to 'Alterar', edit_municipio_path(municipio) %></td>
        <td><%= link_to 'Apagar', municipio, method: :delete, data: { confirm: 'Vocẽ tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Município', new_municipio_path %>
