<%=javascript_include_tag :cocoon %>
<%= form_for(@candidato, url: @url, method: @metodo, html: {multipart: true, class: @classe, id: @id }) do |f| %>
  <% if @candidato.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@candidato.errors.count, "error") %> prohibited this candidato from being saved:</h2>

      <ul>
      <% @candidato.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :telefone %><br>
    <%= f.text_field :telefone %>
  </div>
  <div class="field">
    <%= f.label :logradouro %><br>
    <%= f.text_field :logradouro %>
  </div>
  <div class="field">
    <%= f.label :complemento %><br>
    <%= f.text_field :complemento %>
  </div>
  <div class="field">
    <%= f.label :numero %><br>
    <%= f.text_field :numero %>
  </div>
  <div class="field">
    <%= f.label :cep %><br>
    <%= f.text_field :cep %>
  </div>
  <div class="field">
    <%= f.label :bairro %><br>
    <%= f.text_field :bairro %>
  </div>
  <div class="field">
    <%= f.label "Unidade Federativa" %><br>
    <%= select_tag "UnidadeFederativa", options_for_select(@unidades_federativas.map{ |s| [s.sigla, s.id] }), include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :municipio_id %><br>
    <%= f.select :municipio_id, @municipios.map{ |s| [s.nome, s.id] }, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :dataNascimento %><br>
    <%= f.date_select :dataNascimento %>
  </div>
  <div class="field">
    <%= f.label "Unidade Federativa Naturalidade" %><br>
    <%= select_tag "UnidadeFederativaNaturalidade", options_for_select(@unidades_federativas.map{ |s| [s.sigla, s.id] }), include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :naturalidade_id %><br>
    <%= f.select :naturalidade_id, @municipios.map{ |s| [s.nome, s.id] }, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :nacionalidade %><br>
    <%= f.text_field :nacionalidade %>
  </div>
  <div class="field">
    <%= f.label :cpf %><br>
    <%= f.text_field :cpf %>
  </div>
  <div class="field">
    <%= f.label :foto %><br>
    <%= f.text_field :foto %>
  </div>
   <div class="field">
    <%= f.label :curriculo %><br>
    <%= f.file_field :curriculo %>
  </div>
  

  
  <fieldset id="candidato-certificados">
    <legend>Certificados</legend>
    <ol>
      <%= f.fields_for :certificados do |certificado| %>
        <%= render 'certificado_fields', :f => certificado %>
      <% end %>
    </ol>
    <%= link_to_add_association 'add certificado', f, :certificados, 'data-association-insertion-node' => "#candidato-certificados ol" %>
  </fieldset>
  <fieldset id="candidato-linguas">
    <legend>Línguas</legend>
    <ol>
      <%= f.fields_for :candidato_linguas do |lingua| %>
        <%= render 'candidato_lingua_fields', :f => lingua %>
      <% end %>
    </ol>
    <%= link_to_add_association 'add Língua', f, :candidato_linguas, 'data-association-insertion-node' => "#candidato-linguas ol", 'data-association-insertion-method' => "append"%>
  </fieldset>
  
  <fieldset id="candidato-formacoes_academicas">
    <legend>Formacao Academica</legend>
    <ol>
      <div class='nested-fields'> 
        <table width="100%">
            <tr>
                <td>Grau Formacao</td>
                <td>Insituicao</td>
                <td>Carga Horaria</td>
                <td>Data inicio</td>
                <td>Data Conclusao</td>
                <td></td>
            </tr>
      <%= f.fields_for :formacoes_academicas do |formacao_academica| %>
        <%= render 'formacao_academica_fields', :f => formacao_academica %>
      <% end %>
        </table>
      </div>
    </ol>
    <%= link_to_add_association 'add Formacao Academica', f, :formacoes_academicas, 'data-association-insertion-node' => "#candidato-formacoes_academicas ol div table", 'data-association-insertion-method' => "append"%>
  </fieldset>
  
  <fieldset id="candidato-experiencias_profissionais">
    <legend>Formacao Academica</legend>
    <ol>
      <div class='nested-fields'> 
        <table width="100%">
            <tr>
                <td>Empresa</td>
                <td>Area de Atuacao</td>
                <td>Data inicio</td>
                <td>Data Conclusao</td>
                <td></td>
            </tr>
      <%= f.fields_for :experiencias_profissionais do |experiencia_profissional| %>
        <%= render 'experiencia_profissional_fields', :f => experiencia_profissional %>
      <% end %>
        </table>
      </div>
    </ol>
    <%= link_to_add_association 'add Experiencia Profissional', f, :experiencias_profissionais, 'data-association-insertion-node' => "#candidato-experiencias_profissionais ol div table", 'data-association-insertion-method' => "append"%>
  </fieldset>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<script>
function montaComboMunicipio(idCompoMunicipio, valor){
    var url = '/getMunicipios?uf=' + valor;
    
    $.get(url, function(data) {
      try{
        
        console.log(valor);
        var dataJson = JSON.parse(data);
        $("#" + idCompoMunicipio).find("option").remove();
        $("#" + idCompoMunicipio).get(0).add(new Option("", ""), null);
        $.each(dataJson.aaData, function(index, optionData) {
            var option = new Option(optionData[1], optionData[0]);
                $("#" + idCompoMunicipio).get(0).add(option, null);
           });
        if(idCompoMunicipio == "candidato_municipio_id" && idMunicipio != undefined)
          $("#" + idCompoMunicipio).val(idMunicipio);
        else if(idCompoMunicipio == "candidato_naturalidade_id" && idMunicipioNaturalidade != undefined)
           $("#" + idCompoMunicipio).val(idMunicipioNaturalidade);
      }catch(e)
      {
       
      }
    });
  }

  $("#UnidadeFederativa").change(function(){montaComboMunicipio("candidato_municipio_id", this.value)});
  $("#UnidadeFederativaNaturalidade").change(function(){montaComboMunicipio("candidato_naturalidade_id", this.value)});
  
  
</script>