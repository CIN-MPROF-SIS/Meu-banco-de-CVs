<h1>Minhas Candidaturas</h1>

<table>
  <thead>
    <tr>
      <th>Contratante</th>
      <th>Faixa salarial</th>
      <th>Cidade</th>
      <th>Cargo</th>
      <th>Data cadastro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidatos_vagas.each do |candidato_vaga| %>
      <tr>
        <td><%= candidato_vaga.vaga.contratante %></td>
        <td><%= candidato_vaga.vaga.faixa_salarial %></td>
        <td><%= candidato_vaga.vaga.cidade %></td>
        <td><%= candidato_vaga.vaga.cargo %></td>
        <td><%= candidato_vaga.vaga.data_cadastro.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= link_to 'Ver vaga', "/candidaturas/" + candidato_vaga.id.to_s %></td>
        <td><%= link_to 'Desistir', "/candidaturas/" + candidato_vaga.id.to_s, method: :delete, data: { confirm: 'Você tem certeza que deseja desistir?' } %></td>
        <td>
          <% if candidato_vaga.selecionado %>
            <%= link_to 'Questionário', "/questionarios/vaga/" +candidato_vaga.vaga.id.to_s %>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>