<p id="notice"><%= notice %></p>

<h1>Listing Niveis</h1>

<table>
  <thead>
    <tr>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @niveis.each do |nivel| %>
      <tr>
        <td><%= nivel.descricao %></td>
        <td><%= link_to 'Show', nivel %></td>
        <td><%= link_to 'Edit', edit_nivel_path(nivel) %></td>
        <td><%= link_to 'Destroy', nivel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

